<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRecyclerListaHistoricoIdHistorico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="idhistorico"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewRecyclerListaHistoricoIdPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="idplanejamento"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewRecyclerListaHistoricoIdConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="idconta"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewRecyclerListaHistoricoNomeConta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nomeconta"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewRecyclerListaHistoricoValorConta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="valorconta"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewRecyclerListaHistoricoDataHistorico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dataHistorico"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewRecyclerListaHistoricoExcluir"
                android:layout_width="31dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_excluir" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/black"
        android:focusable="false" />
</LinearLayout>